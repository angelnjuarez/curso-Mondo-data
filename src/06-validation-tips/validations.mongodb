use("MisAngeles_store")

//db.getCollectionInfos() //Obetenemos los schemas actuales

//Actualizar el schema sin hacer drop de la coleccion
db.runCommand({
    collMod: 'users',
    validator: {
        $jsonSchema: {
            bsonType: 'object',
            required: ['email', 'password', 'role'],
            additionalProperties: true, // permite que se agreguen propiedades adicionales
            properties: {
                name: {
                    bsonType: 'string',
                },
                last_name: {
                    bsonType: 'string',
                },
                email: {
                    bsonType: 'string',
                },
                password: {
                    bsonType: 'string',
                    pattern: "[A-Za-z0-9]{8,}$" // 8 caracteres alfanumericos o m√°s
                },
                age: {
                    bsonType: 'number',
                    minimum: 18,
                    maximum: 99
                },
                isSingle: {
                    bsonType: 'bool',
                },
                role: {
                    bsonType: 'string',
                    enum: ['admin', 'seller', 'customer']
                },
            }
        }
    }
})